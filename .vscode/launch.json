    "version": "0.2.0",
    "configurations": [
        {
            "name": "cl_wrapper: connect",
            "type": "python",
            // "preLaunchTask": "run_demo_compile",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 56799
            },
            "justMyCode": true
        },
        {
            "name": "Test VS2008",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_demo_compile.py",
            "args": [
                "--debug",
                "--port",
                "56799"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Test VS2019",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_demo_compile.py",
            "args": [
                "--debug",
                "--port",
                "56799",
                "--vs-version",
                "2019_64"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "generate_compile_commands",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/generate_compile_commands.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}